{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/theme/*": ["theme/*"],
      "@/components/*": ["components/*"]
    },
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/global.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}